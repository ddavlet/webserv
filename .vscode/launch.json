{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug webserv",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/webserv",
            "args": ["./c_file.config"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
		{
			"name": "Mac_debug webserv",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/webserv",
			"args": ["/Users/HP/Documents/Programming/learning_C/webserv/c_file.conf"],
			"cwd": "${fileDirname}",
		}
    ]
}
